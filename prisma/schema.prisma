generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
}

/* ENUMS */

enum UserRole {
  USER
  STUDENT
  TUTOR
  ADMIN
}

enum TutorApplicationStatus {
  PENDING
  APPROVED
  REJECTED
}

/* USER */

model User {
  id        Int      @id @default(autoincrement())
  clerkId   String   @unique
  role      UserRole @default(USER)

  tutor        Tutor?
  enrollments Enrollment[]

  createdAt DateTime @default(now())
}

/* TUTOR */

model Tutor {
  id      Int   @id @default(autoincrement())

  user    User  @relation(fields: [userId], references: [id])
  userId  Int   @unique

  clerkId String @unique

  // === PROFIL TUTOR ===
  fullName       String?
  bio            String?
  portfolio      String?
  portfolioLinks String[] @default([])
  skills         String[] @default([])

  // === STATUS ===
  isActive  Boolean  @default(false)
  createdAt DateTime @default(now())

  // === RELATION ===
  courses Course[]
}

/* COURSE */

model Course {
  id          Int      @id @default(autoincrement())
  tutor       Tutor    @relation(fields: [tutorId], references: [id])
  tutorId     Int

  title       String
  description String
  imageUrl    String?

  price       Int      @default(0)
  benefits    String[] @default([])

  createdAt   DateTime @default(now())

  chapters    Chapter[]
  enrollments Enrollment[]
}

/* CHAPTER */

model Chapter {
  id       Int    @id @default(autoincrement())
  title    String

  course   Course @relation(fields: [courseId], references: [id])
  courseId Int

  lessons  Lesson[]
}

/* LESSON / MATERI */

model Lesson {
  id        Int      @id @default(autoincrement())

  title     String
  content   String?   // materi teks
  videoUrl  String?   // link video dari Cloudinary

  order     Int       @default(0) // urutan dalam chapter

  chapter   Chapter   @relation(fields: [chapterId], references: [id])
  chapterId Int

  createdAt DateTime  @default(now())
}

/* ENROLLMENT */

model Enrollment {
  id        Int      @id @default(autoincrement())

  user      User     @relation(fields: [userId], references: [id])
  userId    Int

  course    Course   @relation(fields: [courseId], references: [id])
  courseId  Int

  createdAt DateTime @default(now())
}

/* TUTOR APPLICATION */

model TutorApplication {
  id              Int                    @id @default(autoincrement())
  clerkId         String
  fullName        String
  bio             String
  portfolioLinks  String[]
  skills          String[]
  teachingPlan    String
  status          TutorApplicationStatus @default(PENDING)
  rejectionReason String?
  createdAt       DateTime               @default(now())
  reviewedAt      DateTime?
}
